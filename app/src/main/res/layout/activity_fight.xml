<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FightActivity">

    <Button
        android:id="@+id/btnSubEnemyEndurance"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F44336"
        android:onClick="subEnemyEndurance"
        android:text="@string/subString"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtEnemyEndurance"
        app:layout_constraintEnd_toStartOf="@+id/txtEnemyEndurance"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAddEnemyEndurance"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:onClick="addEnemyEndurance"
        android:text="@string/addString"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtEnemyEndurance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtEnemyEndurance" />

    <Button
        android:id="@+id/btnSubEnemyCombat"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F44336"
        android:onClick="subEnemyCombat"
        android:text="@string/subString"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtEnemyCombat"
        app:layout_constraintEnd_toStartOf="@+id/txtEnemyCombat"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtEnemyCombat"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:autofillHints="@string/lblCombat"
        android:ems="10"
        android:hint="@string/lblCombat"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/btnAddEnemyCombat"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnSubEnemyCombat"
        app:layout_constraintTop_toBottomOf="@+id/lblCombat2" />

    <TextView
        android:id="@+id/lblResistance2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/lblResistance"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblCombat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/lblCombat"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEnemyEndurance" />

    <Button
        android:id="@+id/btnAddEnemyCombat"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:onClick="addEnemyCombat"
        android:text="@string/addString"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtEnemyCombat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtEnemyCombat" />

    <EditText
        android:id="@+id/txtEnemyEndurance"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:autofillHints="@string/lblResistance"
        android:ems="10"
        android:hint="@string/lblResistance"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/btnAddEnemyEndurance"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnSubEnemyEndurance"
        app:layout_constraintTop_toBottomOf="@+id/lblResistance2" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startFight"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEnemyCombat" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/button5"
        tools:layout_editor_absoluteY="386dp" />
</androidx.constraintlayout.widget.ConstraintLayout>